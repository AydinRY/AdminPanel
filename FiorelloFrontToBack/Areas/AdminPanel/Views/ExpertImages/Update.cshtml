@model ExpertImages

@{
  ViewData["Title"] = "Update";
}

<div class="row">
  <div class="col-md-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Update Expert</h4>
        <form class="forms-sample" method="post" enctype="multipart/form-data">
          <div class="form-group">
            <label asp-for="Name">Name</label>
            <input class="form-control" placeholder="Title" asp-for="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
          </div>
          <div class="form-group">
            <label asp-for="Position">Position</label>
            <input class="form-control" placeholder="Subtitle" asp-for="Position">
            <span asp-validation-for="Position" class="text-danger"></span>
          </div>
          <div class="form-group">
            <label asp-for="Photo">Photo</label>
            <input class="form-control" placeholder="Title" asp-for="Photo" accept="image/*">
            <span asp-validation-for="Photo" class="text-danger"></span>
          </div>
          <button type="submit" class="btn btn-primary mr-2">Submit</button>
          <a class="btn btn-light" asp-action="Index">Cancel</a>
        </form>
      </div>
    </div>
  </div>
</div>