@model BlogImages

@{
  ViewData["Title"] = "Create";
}

<div class="row">
  <div class="col-md-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Create Blog</h4>
        <form class="forms-sample" method="post">
          <div class="form-group">
            <label asp-for="Title">Title</label>
            <input class="form-control" placeholder="Title" asp-for="Title">
            <span asp-validation-for="Title" class="text-danger"></span>
          </div>
          <div class="form-group">
            <label asp-for="Subtitle">Subtitle</label>
            <input class="form-control" placeholder="Subtitle" asp-for="Subtitle">
            <span asp-validation-for="Subtitle" class="text-danger"></span>
          </div>
          <button type="submit" class="btn btn-primary mr-2">Submit</button>
          <a class="btn btn-light" asp-action="Index">Cancel</a>
        </form>
      </div>
    </div>
  </div>
</div>